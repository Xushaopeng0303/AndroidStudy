<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xsp.framework">

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:name=".FrameworkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" />

        <!-- 自定义UI -->
        <activity android:name=".activity.custom.CustomUi1Activity" />
        <activity android:name=".activity.custom.CustomUi2Activity" />
        <activity android:name=".activity.custom.ProgressBarActivity" />

        <!-- EventBus -->
        <activity android:name=".activity.eb.EventBusReceiveActivity" />
        <activity android:name=".activity.eb.EventBusSendActivity" />

        <!-- Material Design -->
        <activity android:name=".activity.material.TabLayoutActivity" />
        <activity android:name=".activity.material.CoordinatorLayoutActivity"/>


        <activity android:name=".activity.AndroidKnowledgeGraphActivity" />
        <activity android:name=".activity.GitHubActivity" />
        <activity android:name=".activity.EmptyActivity" />
        <activity android:name=".activity.DropDownMenuActivity" />
        <activity android:name=".activity.StudyCanvasActivity" />
        <activity android:name=".activity.animation.AnimationActivity" />
        <activity android:name=".activity.animation.TransitionActivity" />
        <activity android:name=".activity.animation.TransitionDestActivity" />
        <activity android:name=".activity.animation.SystemTransitionSrcActivity" />
        <activity android:name=".activity.animation.SystemTransitionDestActivity" />
    </application>

</manifest>